{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "paths": {
            "environment-settings": [ "app/settings/setup/environment-settings" ]
        },
        "removeComments": true,
        "sourceMap": false,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5"
    }
}
